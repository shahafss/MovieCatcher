<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="300dp"
    android:paddingTop="8dp"
    android:paddingRight="7dp"
    android:paddingLeft="7dp"
    android:paddingBottom="8dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/simpleframe"
    android:backgroundTintMode="add">

    <RelativeLayout
        android:id="@+id/colorLay"
        android:layout_width="wrap_content"
        android:layout_height="400dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/mainListTitle"
            android:textColor="#ffca45"
            android:singleLine="true"
            android:background="#2f2f2f"
            android:paddingLeft="2dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout" />

        <CheckBox
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainline_checkbox_text"
            android:id="@+id/checkBox"
            style="?android:attr/isIndicator"
            android:checked="false"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#008cff"
            android:buttonTint="@color/newGreenColor"

        android:textStyle="bold" />

        TextView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/mainListPlot"
            android:layout_below="@+id/mainListTitle"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:textColor="#ffca45"
            android:ellipsize="end"
            android:maxLines="7"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mainListImg"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RatingBar
            android:isIndicator="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listVratingBar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:stepSize="0.5"
            android:clickable="false"
            android:contextClickable="false"
            android:focusable="false"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:text="New Text"
            android:id="@+id/mainListPlot"
            android:layout_below="@+id/mainListTitle"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:textColor="#ffca45"
            android:ellipsize="end"
            android:maxLines="10"/>


    </RelativeLayout>

</RelativeLayout>